{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Auto Commit and Push with Retry",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/.vscode/task/git-auto-push.ps1",
				"-commitMsg",
				"${input:commitMessage}"
			],
			"group": "build"
		},
		{
			"label": "git pull with retry",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-Command",
				"for ($i=1; $i -le 30; $i++) { if (git pull) { break } ; Start-Sleep -Seconds 2 }"
			],
			"group": "build"
		}
	],
	"inputs": [
		{
			"id": "commitMessage",
			"type": "promptString",
			"description": "请输入本次提交的 commit message"
		}
	]
}